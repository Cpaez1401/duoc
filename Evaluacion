def menú():
    print("***************************")
    print("   Registro de Sueldos     ")
    print("***************************")
    print("1.-Registrar Trabajadores  ")
    print("2.-Listado de trabajadores ")
    print("3.-Imprimir Planilla       ")
    print("3.-Salir                   ")
    print("***************************")

trabajadores =[]
cargos= ["ceo", "desarrollador", "analista de datos"]

def registrar_trabajadares():
    nombre= input("Ingrese Nombre del trabajadores: ")
    apellido = input("Ingrese el apellido del trabajador: ")
    print("los cargos disponibles son: ", cargos)
    cargo= input(" Ingrese el nombre del cargo ").str().lower()
    if cargo != cargos:
        print("Ingrese un cargo válido")
        return

    sueldo_bruto= input(int("Ingrese Sueldo Bruto"))
    desc_salud= sueldo_bruto * 0.07
    desc_afp= sueldo_bruto * 0.12
    liquidacion= sueldo_bruto - desc_afp - desc_afp

    trabajador = {"Nombre: ", nombre, "Apellido: ", apellido, "Cargo: ", cargo, "Sueldo Bruto: ",sueldo_bruto, 
                    "Descuento AFP: ", desc_afp, "Descuento Salud: ", desc_salud, 
                    "Liquidción de Sueldo:" ,liquidacion }
    trabajadores.append(trabajador)
    print("el trabajador fue ingresado exitosamente")

def imprimir_plantilla():
    print("Seleccione la opción de impresión:")
    print("1. Imprimir todos los trabajadores")
    print("2. Imprimir por cargo específico")
    op = int(input("Ingrese su opción: "))

    while True: 
        if op == 1:
            plantilla = "planilla_todos.txt"
            with open(plantilla, "w") as archivo:
                for trabajador in trabajadores:
                    archivo.write(f"Nombre: {trabajador['nombre']} {trabajador['apellido']}, Cargo: {trabajador['cargo']}, "
                           f"Sueldo Bruto: {trabajador['sueldo_bruto']}, Desc. Salud: {trabajador['desc_salud']}, "
                           f"Desc. AFP: {trabajador['desc_afp']}, Líquido a Pagar: {trabajador['liquidacion']}\n")
            print(f"Planilla de todos los trabajadores guardada en {plantilla}.\n")


        if op== 2:
            cargo= input("Ingrese cargo es cuál desea imprimir: ")
        if cargo != cargos:
            print("ingrese cargo válido")
            return
        plantilla = f"planilla_{cargo}.txt"
        with open(plantilla, "w") as archivo:
            for trabajador in trabajadores:
                if trabajador['cargo'] == cargo:
                    archivo.write(f"Nombre: {trabajador['nombre']} {trabajador['apellido']}, Cargo: {trabajador['cargo']}, "
                               f"Sueldo Bruto: {trabajador['sueldo_bruto']}, Desc. Salud: {trabajador['desc_salud']}, "
                               f"Desc. AFP: {trabajador['desc_afp']}, Líquido a Pagar: {trabajador['liquidacion']}\n")
        print(f"Planilla de trabajadores con cargo {cargo} guardada en {plantilla}.\n")
        else:
        print("Opción no válida.")


def principal():
    while sw == 1:
        menú()
        op= int(input(" Ingrese su opción: "))
        if op ==1:
            registrar_trabajadares()

        elif op ==2:
            

        elif op ==3:
            imprimir_plantilla()

        elif op==4:
            print("Usted está saliendo")
            sw ==0
